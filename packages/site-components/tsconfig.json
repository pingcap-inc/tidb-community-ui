{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["ESNext", "DOM"],
    "target": "esnext",
    "module": "esnext",
    "sourceRoot": ".",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*", "env.d.ts"]
}
